<body>
  <div class="body">
    <form class="row" method="POST" action="/">
      <div class="col">

        <input 
        type="text"
        name="name"
        class="form-control" 
        placeholder="Seu nome" 
        aria-label="First name">

      </div>

      <div class="col">

        <input 
        type="email"
        name="email"
        class="form-control" 
        placeholder="E-mail" 
        aria-label="Last name">

      </div>
      <div class="col">
        <button type="submit">Enviar</button>
      </div>
    </form>
  </div>
</body>
</html>